@require "iconfont/iconfont.css"

.iconfont
  relative()
  display inline-block
  font-size $common-size
  transform scale(16 / 14)
  padding-left 1px
  padding-right 1px

.icon-character
  display inline-block
  line-height 1
  border-radius 5px
  padding 4px
  color $reverse-color
  scaleSize(10)
  margin-left -2px
  margin-right -2px
